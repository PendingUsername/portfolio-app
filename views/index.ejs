      <p>Page Views: <%= views %></p> <!-- View counter -->
    </footer>
  </div>

  <!-- JavaScript for Dark/Light Mode Toggle -->
  <script>
    const themeToggle = document.getElementById('theme-toggle');
    const currentTheme = localStorage.getItem('theme') ? localStorage.getItem('theme') : 'dark';
    const onOffText = document.querySelector('.on-off-text');

    // Apply the saved theme on page load
    if (currentTheme === 'light') {
      document.body.classList.add('light-mode');
      themeToggle.checked = true;
      onOffText.textContent = 'Light';
    } else {
      onOffText.textContent = 'Dark';
    }

    // Toggle theme on slider change
    themeToggle.addEventListener('change', () => {
      document.body.classList.toggle('light-mode');
      const theme = document.body.classList.contains('light-mode') ? 'light' : 'dark';
      localStorage.setItem('theme', theme);

      // Update the on/off text
      onOffText.textContent = theme.charAt(0).toUpperCase() + theme.slice(1);
    });
  </script>
</body>
</html>
